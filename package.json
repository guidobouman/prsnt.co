{
  "name": "prsnt.co",
  "version": "0.1.0",
  "description": "Seriously simple presentation tool.",
  "author": "Guido Bouman",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/guidobouman/prsnt.co"
  },
  "bugs": {
    "url": "https://github.com/guidobouman/prsnt.co/issues"
  },
  "scripts": {
    "dev": "webpack-dev-server --inline --hot --quiet --port 3000",
    "clean": "rm -rf build/*",
    "build": "export NODE_ENV=production && webpack --progress --hide-modules",
    "copy-index": "cp index.html build/index.html",
    "release": "npm run clean && npm run build && npm run copy-index",
    "deploy": "cp build/* gh-pages/ && cd gh-pages && git add . && git commit -m \"Release at $(date)\" && git push"
  },
  "dependencies": {
    "vue": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.1.2",
    "babel-loader": "^6.1.0",
    "babel-plugin-transform-runtime": "^6.1.2",
    "babel-preset-es2015": "^6.1.2",
    "babel-preset-stage-0": "^6.1.2",
    "babel-runtime": "^6.0.14",
    "css-loader": "^0.21.0",
    "eslint": "^1.10.1",
    "eslint-config-airbnb": "^1.0.0",
    "file-loader": "^0.8.4",
    "style-loader": "^0.13.0",
    "stylus-loader": "^1.4.0",
    "template-html-loader": "0.0.3",
    "vue-hot-reload-api": "^1.2.0",
    "vue-html-loader": "^1.0.0",
    "vue-loader": "^7.0.0",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.0"
  },
  "eslintConfig": {
    "extends": "airbnb/base"
  }
}
